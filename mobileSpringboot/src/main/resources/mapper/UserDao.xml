<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.UserDao">
    <resultMap id="userMap" type="com.entity.User">
        <id column="user_id" property="id"/>
        <result column="user_name" property="email"/>
        <result column="user_pwd" property="pwd"/>
        <result column="state" property="state"/>
        <result column="age" property="age"/>
        <result column="sex" property="sex"/>
        <result column="phone" property="phone"/>
        <result column="nickName" property="nickName"/>
        <result column="createTime" property="createTime"/>
        <result column="avatar" property="avatar"/>
    </resultMap>
    <!--    查询所有-->
    <select id="selectAll" resultMap="userMap">
        select * from user <where>
        <if test="state!=-1">
            and state=#{state}
        </if>
        <if test="name!=null and name!=''">
            and user_name like concat('%',#{name},'%')
        </if>
        <if test="begin!=null">
            and createTime <![CDATA[ >= ]]> #{begin}
        </if>
        <if test="end!=null and begin &lt; end">
            and createTime <![CDATA[ <= ]]> #{end}
        </if>
    </where> order by user_id desc
    </select>
    <!--    通过查询名字判断是否注册-->
    <select id="selectByName" resultMap="userMap">
        select *
        from user
        where user_name = #{email}
    </select>
    <!--    用户登录-->
    <select id="selectByNameAndPwd" resultMap="userMap">
        select *
        from user
        where user_name = #{email}
          and user_pwd = #{password}
    </select>
    <!--    注册时符合条件就添加-->
    <insert id="insertOne">
        insert into user
        values (null, #{email}, #{pwd}, now(), 0, null, null, 0, '默认昵称', null)
    </insert>
    <!--    更新用户的个人信息-->
    <update id="updateU">
        update user
        set age=#{age},
            sex=#{sex},
            phone=#{phone},
            nickName=#{nickName},
            avatar=#{avatar}
        where user_id = #{id}
    </update>
    <!--    用户注册完成激活-->
    <update id="updateState">
        update user
        set state=#{state}
        where user_name = #{email}
    </update>
    <!--    后台添加用户-->
    <insert id="add">
        insert into user
        values (null, #{email}, #{pwd}, now(), #{age}, #{sex}, #{phone}, #{state}, #{nickName}, #{avatar})
    </insert>
    <!--后台统计-->
    <select id="selectCount" resultType="java.lang.Integer">
        select count(u.user_id) as num
        from user u
        where u.state = 1
    </select>
<!--    用户改密-->
    <update id="updatePwd">
        update user
        set user_pwd=#{pwd}
        where user_name = #{email}
    </update>
<!--    qq用户更新-->
    <update id="updateQQ">
        update user set nickName=#{nickName},avatar=#{avatar} where user_name=#{email}
    </update>
</mapper>